{{ 'shop/products' | javascript_include_tag }}

{% assign p = product %}
<main class="l-container js-main-container" role="main" id="product-show-view">



  <div class="l-container__row">
    <div class="p-product_content">
      <div class="p-product_content__inner">
        <div class="p-product_content__inner__img">
          <div class="c-product_img">
            {% comment %} メイン画像のスライダー {% endcomment %}
            <div class="c-product_img__slider c-product_img__slider--main splide">
              <div class="c-product_img__track splide__track">
                <ul class="c-product_img__list splide__list">
                  {% if product.master.thumbnails.size > 0 %}
                    {% for sub_thumbnail in product.master.thumbnails %}
                      <li class="c-product_img__item splide__slide">
                        <img class="c-product_img__image" src="{{ sub_thumbnail.url }}">
                      </li>
                    {% endfor %}
                  {% else %}
                    {% if product.thumbnail.url %}
                      {% assign src = product.thumbnail.url %}
                    {% else %}
                      {% assign src = 'missing' | image_url %}
                    {% endif %}
                    <li class="c-product_img__item splide__slide">
                      <img class="c-product_img__image" src="{{ src }}">
                    </li>
                  {% endif %}
                </ul>
              </div>
            </div>
            
            {% comment %} サムネイル画像のスライダー {% endcomment %}
            <div style="display: none;">
                <div class="c-product_img__slider c-product_img__slider--thumbnail splide">
                <div class="c-product_img__track splide__track">
                    <ul class="c-product_img__list splide__list">
                    {% if product.master.thumbnails.size > 0 %}
                        {% for sub_thumbnail in product.master.thumbnails %}
                        <li class="c-product_img__item splide__slide">
                            <img class="c-product_img__image" src="{{ sub_thumbnail.url }}">
                        </li>
                        {% endfor %}
                    {% else %}
                        {% if product.thumbnail.url %}
                        {% assign src = product.thumbnail.url %}
                        {% else %}
                        {% assign src = 'missing' | image_url %}
                        {% endif %}
                        <li class="c-product_img__item splide__slide">
                        <img class="c-product_img__image" src="{{ src }}">
                        </li>
                    {% endif %}
                    </ul>
                </div>
                </div>
            </div>
            {% comment %} サムネイル画像のスライダー {% endcomment %}

          </div>
        </div>
        {% section 'products_show_content' %}
      </div>
    </div>
  </div>


</main>



<link rel="stylesheet" href="{{ theme_file_root_path }}/assets/product.css" type="text/css">
<script src="{{ theme_file_root_path }}/assets/product.js" type="text/javascript"></script>

{% content_for meta_description %}
{% endcontent_for %}

{% content_for meta_keywords %}
{% endcontent_for %}

{% content_for title %}
{% endcontent_for %}