<section class="uptproduct__fv">
    <!-- ここから -->
    <div class="uptblc__buyblc">
        <div class="uptblc__buyblc--img">
            <img src="<%= imgpath %>/assets/images/uptorigin/0926/img_toner.jpg" alt="ウプト バランシングトナー" width="auto"
                height="auto" class="pcImg">
            <img src="<%= imgpath %>/assets/images/uptorigin/0926/img_toner-sp.jpg" alt="ウプト バランシングトナー" width="auto"
                height="auto" class="spImg">
        </div>

        <div class="uptblc__buyblc__spborder"></div>

        <div class="uptblc__buyblc--s">
            <div class="uptblc__buyblc--rblc">
                <div class="uptblc__buyblc--contents">
                    <div class="uptblc__buyblc--single">
                        <div class="uptblc__buyblc--singleblc">
                            <h1 class="headingttl">Upt BALANCING TONER ウプト バランシングトナー</h1>
                            <p class="upt__name uptblc__buyblc--single-ttl">BALANCING<br>TONER</p>
                            <img src="<%= imgpath %>/assets/images/uptorigin/0914/point_set01.png"
                                alt="ウプト バランシングトナー" width="auto" height="auto">
                        </div>
                        <p class="uptblc__buyblc--single-jp">ウプト バランシングトナー<br>〈化粧⽔〉</p>
                        <p class="uptblc__buyblc--single-it">155mL</p>
                        <p class="uptblc__buyblc--single-txt">
                            適量を手に取り、両手でお顔全体を包み込むようにハンドプレスして優しくなじませて。これは今日の疲れを忘れるリラックスタイムだから。お肌が潤いで満ちるまで好きなだけ重ね付けして。
                        </p>
                        <p class="upt__price uptblc__buyblc--txt03">¥2,420 (tax in)</p>
                        <!-- <p class="upt__price uptblc__buyblc--txt03 sale"><span class="upt__price--feature">10%OFF</span>¥2,178 (tax in)</p> -->


                        <div class="uptblc__buyblc--btn">
                            <!-- 商品選択フォーム -->
                            <form action="/shop/cart/add" method="post">
                                <div style="display: none">
                                    <input id="variant-id" type="hidden" name="variant_id"
                                        value="{{ product.master.id }}">
                                    <div id="option_types"></div>

                                    <label>数量</label>
                                    <input id="text-out-of-stock" value="在庫切れ" disabled style="display:none;">
                                    <select id="quantity" name="quantity" style="display:none;"></select>

                                    <a id="btn-stock-waiting-list" href="javascript:void(0);"
                                        style='display:none;'>再入荷お知らせ</a>
                                </div>

                                <button id="btn-add">
                                    <p class="txt">購入はこちら</p><span></span>
                                </button>

                            </form>


                            

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- ここまで -->
</section>


